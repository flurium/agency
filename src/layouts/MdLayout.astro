---
import Layout from "./Layout.astro"

const props = Astro.props.frontmatter
---

<Layout title={props.title} description={props.description}>
  <article class="md">
    <slot />
  </article>
</Layout>

<style is:global>
  .md {
    @apply mt-10;

    h1 {
      @apply text-4xl leading-tight mb-3 mt-6;
    }
    h2 {
      @apply text-3xl  mb-3 mt-6;
    }
    h3 {
      @apply text-2xl  mb-3 mt-6;
    }
    p {
      @apply my-2;
    }
    a {
      @apply text-primary-500 underline;
    }
    ul:not(:has(input[type="checkbox"])) {
      @apply list-disc ml-4;
    }
    input[type="checkbox"] {
      @apply rounded-none h-4 w-4;
    }
  }
</style>
