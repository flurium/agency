---
import Solutions from "../components/landing/Solutions.astro"
import Layout from "../layouts/Layout.astro"

export const prerender = false
---

<Layout
  title="Page isn't found | Flurium"
  description="The page doesn't exist or isn't made yet. Check url or inform us."
>
  <section class="py-20 md:py-28 text-center">
    <h1 class="text-6xl font-bold">Page isn't found</h1>
    <h2 class="mt-6 mb-10">
      The page doesn't exist or isn't made yet. Check url or inform us.
    </h2>

    <div class="flex justify-center gap-4">
      <a
        class="py-3 px-6 border border-black bg-black text-white rounded-input"
        href="/contact"
      >
        CONTACT
      </a>
      <a class="py-3 px-6 rounded-input border border-black" href="/">ABOUT US</a>
    </div>
  </section>

  <Solutions />

  <section class="py-20 md:py-28">
    <div class="p-16 text-center bg-primary-50 rounded-xl">
      <h3 class="text-5xl font-bold">Implement Ideas Today!</h3>
      <p class="mt-6 mb-10">
        Our team of experts can help transform your digital presence and improve your
        online reach.
      </p>
      <div class="flex justify-center gap-4">
        <a
          class="py-3 px-6 border border-black bg-black text-white rounded-input"
          href="/contact"
        >
          HIRE
        </a>
        <a class="py-3 px-6 rounded-input border border-black" href="/#team"> MEET TEAM</a>
      </div>
    </div>
  </section>
</Layout>
