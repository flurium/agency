---
import Layout from "../layouts/Layout.astro"
---

<Layout title="" description="">
  <a href="#one">One</a>
  <a href="#two">Two</a>
  <a href="#three">Three</a>

  <div
    id="slider"
    class="flex overflow-x-scroll scroll-smooth"
    style="scroll-snap-type: x mandatory; scrollbar-width: thin; scrollbar-color: transparent transparent; "
  >
    <div
      id="one"
      class="w-full flex-none h-96 bg-red-500"
      style="scroll-snap-align: start;"
    >
      Block 1
    </div>
    <div
      id="two"
      class="w-full flex-none h-96 bg-blue-500"
      style="scroll-snap-align: start;"
    >
      Block 2
    </div>
    <div
      id="three"
      class="w-full flex-none h-96 bg-green-500"
      style="scroll-snap-align: start;"
    >
      Block 3
    </div>
  </div>
</Layout>

<style>
  #slider::-webkit-scrollbar {
    width: 0px;
  }

  #slider::-webkit-scrollbar-thumb {
    background-color: transparent;
  }
</style>
