---
import type { ContactFormData } from "."

type Props = {
  data?: ContactFormData | null
}

const { data } = Astro.props
---

<div class="my-16 md:my-24" id="contact">
  <h3 class="text-4xl md:text-5xl font-medium font-serif mb-5">Contact</h3>
  <p class="text-secondary-600 text-xl text-wrap-balance">
    Ready to bring your idea to life? Or just want to ask some question you can't figure
    out? We are ready to replay as soon as it is possible.
  </p>

  <form
    class="grid grid-cols-1 md:grid-cols-2 gap-5 mt-10"
    action="/contact"
    method="post"
  >
    <label for="name">
      Your name
      <input
        value={data?.name.value}
        type="text"
        id="name"
        name="name"
        required
        placeholder="Roman Koshchei"
        class="py-3 px-5 border border-secondary-200 w-full mt-1"
      />
      {data?.name.error ? <p>{data.name.error}</p> : <Fragment />}
    </label>

    <label for="email">
      Email address
      <input
        onclick="if(this.value === '') { umami.track('Email input click') }"
        value={data?.email.value}
        type="email"
        id="email"
        name="email"
        required
        placeholder="your@email.com"
        class="py-3 px-5 border border-secondary-200 w-full mt-1"
      />
      {data?.email.error ? <p>{data.email.error}</p> : <Fragment />}
    </label>

    <label class="md:col-span-2" for="context">
      Context
      <textarea
        id="context"
        name="context"
        placeholder="Tell us about your idea, context or question..."
        class="py-3 px-5 border border-secondary-200 w-full mt-1"
        rows="5">{data?.context ?? ""}</textarea
      >
    </label>

    <input
      type="text"
      name="address"
      id="address"
      value=""
      tabindex="-1"
      autocomplete="off"
    />

    <div class="md:col-span-2 flex justify-end">
      <button
        class="py-3 px-5 bg-primary-500 inline-block text-white hover:bg-primary-600"
      >
        Contact</button
      >
    </div>
  </form>
</div>
<style>
  #address {
    display: none;
  }
</style>
