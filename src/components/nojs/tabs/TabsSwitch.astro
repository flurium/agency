---
import { head } from "../../../layouts/head"

/*

  Important structure:

  input type="radio" must be on top of:
  - labels if want to highlight 
  - content required

*/

type Props = {
  key: string
  tabs: string[]
}

const { key, tabs } = Astro.props

head.css(`
  ${tabs.map((tab) => `#${tab}:checked ~ * label[for="${tab}"]`)} {
    border-bottom-width: 2px;
  }

  ${tabs.map((tab) => `#${tab}:checked ~ [data-tab="${tab}"]`)} {
    display: block;
  }
`)
---

{
  tabs.map((tab, i) => (
    <input type="radio" name={key} id={tab} class="hidden" checked={i == 0} />
  ))
}
