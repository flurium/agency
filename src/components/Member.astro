---
import { Image } from "astro:assets"

import dmytro from "../assets/dmytro.png"
import mariia from "../assets/mariia.png"
import roman from "../assets/roman.png"
import vitalii from "../assets/vitalii.png"

const members = { dmytro, mariia, roman, vitalii }

export type Props = {
  img: keyof typeof members
  role: string
  name: string
}

const { img, role, name } = Astro.props
---

<div class="text-center">
  <Image
    width={256}
    height={256}
    src={members[img]}
    alt={`${name}'s photo`}
    class="w-full rounded-md"
    quality={100}
  />

  <h3 class="font-semibold text-xl mt-4">{name}</h3>
  <p class="opacity-90">{role}</p>
</div>
