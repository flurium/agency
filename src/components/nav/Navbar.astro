---
import type { Language, NavbarTranslation } from "../../translations"
import LanguageSwitch from "./LanguageSwitch.svelte"
import Link from "./Link.svelte"
import ToggleNavbar from "./ToggleNavbar.svelte"

type Props = {
  lang: Language
  t: NavbarTranslation
}

const { lang, t } = Astro.props
---

<header class="max-w-screen-xl p-6 flex justify-between items-center m-auto gap-4">
  <a class="select-none font-bold text-primary-500 text-3xl" href="/">Flurium</a>
  <nav class="hidden sm:flex gap-5 items-center">
    <LanguageSwitch lang={lang} client:load />
    <a
      class="hover:bg-secondary-100 gap-3 py-2 px-4 rounded-md"
      href={`/${lang}/#our-work`}
      rel="prefetch"
    >
      {t.ourWork}
    </a>
    <a
      class="hover:bg-secondary-100 gap-3 py-2 px-4 rounded-md"
      href={`/${lang}/#team`}
      rel="prefetch"
    >
      {t.team}
    </a>
    <a
      class="hover:bg-secondary-100 gap-3 py-2 px-4 rounded-md"
      href="/blog"
      rel="prefetch"
    >
      {t.blog}
    </a>
    <a
      href={`/${lang}/#contact`}
      class="py-2 px-4 rounded-md bg-primary-500 hover:bg-primary-600 text-white"
    >
      {t.contact}
    </a>
  </nav>
  <ToggleNavbar t={t} client:visible />
</header>
