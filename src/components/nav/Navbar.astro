---
import type { Language, NavbarTranslation } from "../../translations"
import Link from "./Link.svelte"
import ToggleNavbar from "./ToggleNavbar.svelte"

type Props = {
  lang: Language
  t: NavbarTranslation
}

const { lang, t } = Astro.props
---

<header class="max-w-screen-xl p-6 flex justify-between items-center m-auto gap-4">
  <a class="select-none font-bold text-primary-400 text-3xl" href="/">Flurium</a>
  <nav class="hidden sm:flex gap-8 items-center">
    <Link href={t.switch.route}>{t.switch.label}</Link>
    <Link href={`${lang}/#our-work`}>{t.ourWork}</Link>
    <Link href={`${lang}/#team`}>{t.team}</Link>
    <Link href="/blog">{t.blog}</Link>
    <a
      href={`${lang}/#contactour-work1`}
      class="py-2 px-4 rounded-md bg-primary-400 text-white"
    >
      {t.contact}
    </a>
  </nav>
  <ToggleNavbar t={t} client:visible />
</header>
