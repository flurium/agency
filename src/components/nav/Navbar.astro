---
import { navbarTranslation, type Language } from "../../translations"
import { TwitterIcon, GitHubIcon } from "../icons"
import LanguageSwitch from "./LanguageSwitch.svelte"
import ToggleNavbar from "./ToggleNavbar.svelte"

type Props = {
  lang: Language
}

const { lang } = Astro.props
const t = navbarTranslation[lang]
---

<header class="max-w-screen-xl p-6 flex justify-between items-center m-auto gap-4">
  <a class="select-none font-bold text-primary-500 text-3xl" href="/">FLURIUM</a>
  <nav class="hidden sm:flex gap-5 items-center">
    <LanguageSwitch lang={lang} client:load />
    <a
      class="hover:bg-secondary-100 py-2 px-4 rounded-md"
      href={`/${lang}/#our-work`}
      rel="prefetch"
    >
      {t.ourWork}
    </a>
    <a
      class="hover:bg-secondary-100 py-2 px-4 rounded-md"
      href={`/${lang}/#team`}
      rel="prefetch"
    >
      {t.team}
    </a>
    <a
      class="hover:bg-secondary-100 py-2 px-4 rounded-md"
      href={`/blog/${lang}`}
      rel="prefetch"
    >
      {t.blog}
    </a>
    <a
      class="hover:bg-secondary-100 w-12 h-12 flex justify-center items-center rounded-md"
      href="https://twitter.com/fluriumteam"
      target="_blank"
    >
      <TwitterIcon />
    </a>
    <a
      class="hover:bg-secondary-100 w-12 h-12 flex justify-center items-center rounded-md"
      href="https://github.com/flurium"
      target="_blank"
    >
      <GitHubIcon />
    </a>
    <a
      href={`/${lang}/#contact`}
      class="py-2 px-4 rounded-md bg-primary-500 hover:bg-primary-600 text-white"
    >
      {t.contact}
    </a>
  </nav>
  <ToggleNavbar lang={lang} t={t} client:visible />
</header>
